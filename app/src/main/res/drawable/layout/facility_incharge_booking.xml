<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">



    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#161616"
        android:textColor="#fff"
        app:cardCornerRadius="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:textColor="#fff"
                android:orientation="vertical"
                android:background="#161616">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/inBoookName"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:background="#161616"
                    android:text="Name" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/inBookDate"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:background="#161616"
                    android:text="Date" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/inBookAmount"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:background="#161616"
                    android:text="R" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/inStartTime"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/baseline_access_time_24"
                    android:background="#161616"
                    android:text="" />



        </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="40"

                >

                <Button
                    android:id="@+id/btnInCollectCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"

                    android:text="Collect-cash" />

                <Button
                    android:id="@+id/btnInAccess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"

                    android:text="Grant-Access" />

                <Button
                    android:id="@+id/btnInAccessGranted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"

                    android:text="Access-Granted" />


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>