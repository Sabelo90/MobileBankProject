<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161616"
    android:orientation="vertical"

    tools:context=".FacilitiesActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="20dp"
        android:background="#fece2f"
        >
       <ImageView
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:id="@+id/shakaZulu"
           android:layout_centerVertical="true"
           android:src="@drawable/mat"/>
        <TextView
            android:id="@+id/txtShakaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="Log-In,Book  Enjoy"
            android:textColor="#161616"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/shakaZulu"

            />
        <TextView
            android:id="@+id/txtShakaStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="UFS_Qwawa_Campus"
            android:textColor="#161616"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:layout_below="@+id/txtShakaName"
            android:layout_toRightOf="@+id/shakaZulu"

            />



</RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Facilities"
            android:textColor="#FF9800"
            android:textSize="24dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/roboto"
            android:text="List"
            android:textColor="#fff"
            android:textSize="24dp"

            />


    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:id="@+id/listview"/>


</LinearLayout>